@page
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Policy = "OrgMember")]
@model ProposalsArchivedModel
@using SignFlow.Domain.Entities
@{
    ViewData["Title"] = "Archived/Deleted Proposals";
}
<h2>Archived/Deleted Proposals</h2>
<p>
    <a class="btn btn-secondary" asp-page="Index">Back to Active</a>
</p>
<table class="table table-sm table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Status</th>
            <th>Updated</th>
            <th style="width:260px"></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var p in Model.Items)
    {
        var updated = p.DeletedUtc?.ToLocalTime().ToString("g") ?? p.SignedUtc?.ToLocalTime().ToString("g") ?? p.SentUtc?.ToLocalTime().ToString("g") ?? p.PaidUtc?.ToLocalTime().ToString("g") ?? p.ExpiresUtc?.ToLocalTime().ToString("g");
        <tr>
            <td>@p.Title</td>
            <td>
                @p.Status
                @if (p.IsDeleted)
                {
                    <span class="badge rounded-pill text-bg-danger ms-2">Deleted</span>
                }
                else if (p.Status == ProposalStatus.Archived)
                {
                    <span class="badge rounded-pill text-bg-warning text-dark ms-2">Archived</span>
                }
            </td>
            <td>@updated</td>
            <td class="d-flex gap-1">
                @if (p.IsDeleted)
                {
                    <form method="post" asp-page-handler="Restore" asp-route-id="@p.Id" class="d-inline">
                        <button class="btn btn-sm btn-outline-success" type="submit">Restore</button>
                    </form>
                }
                @if (p.Status == ProposalStatus.Archived)
                {
                    <form method="post" asp-page-handler="Unarchive" asp-route-id="@p.Id" class="d-inline">
                        <button class="btn btn-sm btn-outline-primary" type="submit">Unarchive</button>
                    </form>
                }
                <a class="btn btn-sm btn-outline-secondary" asp-page="View" asp-route-id="@p.Id">View</a>
            </td>
        </tr>
    }
    </tbody>
</table>
