@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@*
  Minimal layout for Razor Pages starter
*@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SignFlow</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container py-4">
        <header class="mb-4 d-flex justify-content-between align-items-center">
            <h2 class="m-0"><a class="text-decoration-none" href="/">SignFlow</a></h2>
            <nav>
                @if (SignInManager.IsSignedIn(User))
                {
                    <span class="me-2">@User.Identity?.Name</span>
                    <a class="btn btn-outline-secondary btn-sm" asp-page="/Account/Logout">Logout</a>
                }
                else
                {
                    <a class="btn btn-outline-primary btn-sm me-2" asp-page="/Account/Login">Login</a>
                    <a class="btn btn-primary btn-sm" asp-page="/Account/Register">Register</a>
                }
            </nav>
        </header>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
        <footer class="border-top pt-3 text-muted">
            <small>&copy; @DateTime.Now.Year - SignFlow</small>
        </footer>
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>
