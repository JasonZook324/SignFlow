@page
@model OrgSettingsModel
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Policy = "OrgOwner")]
@{
    ViewData["Title"] = "Organization Settings";
}
<h2>Organization Settings</h2>
@if (Model.Organization != null)
{
    <form method="post" class="mt-3">
        <div class="mb-3">
            <label asp-for="Input.Name" class="form-label"></label>
            <input asp-for="Input.Name" class="form-control" />
            <span asp-validation-for="Input.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Input.Slug" class="form-label"></label>
            <input asp-for="Input.Slug" class="form-control" />
            <span asp-validation-for="Input.Slug" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
}
